<div class="bg-light">
 
  <td>
    <% if @contact.image.attached? %>
      <%= link_to image_tag(@contact.profile), @contact.image %>
    <% else %>
      <p>[ no available image ] </p>
    <% end %>
  </td>
  
  <p class="fs-2">
    <strong>First name:</strong>
    <%= @contact.first_name %>
  </p>

  <p class="fs-2">
    <strong>Last name:</strong>
    <%= @contact.last_name %> 
  </p>

  <p class="fs-4">
    <strong>Media:</strong>
  
    <%= render partial: "links_show", collection: @link %>  
  </p>

  <p class="fs-6">
    contact listed by:
    <%= @contact.user.name %>
  </p>

</div>

<% if logged_in? && (@contact.user == current_user || current_user.admin) %>
  <%= link_to 'Edit', edit_contact_path(@contact), class:"btn btn-success" %>
<% end %>

<%= link_to 'Back', contacts_path, class:"btn btn-danger" %>
