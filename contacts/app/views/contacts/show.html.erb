<p id="notice"><%= notice %></p>

<div class="bg-light">
  <p class="fs-2">
    <strong>First name:</strong>
    <%= @contact.first_name %>
  </p>

  <p class="fs-2">
    <strong>Last name:</strong>
    <%= @contact.last_name %> 
  </p>

  <p class="fs-4">
    <strong>Media:</strong>
    <!--%= @links.map{|link| link.media} %-->
    <% @links.each do |link| %>
      <p><%= link.media %></p>
    <% end %>
  </p>
</div>

<%= link_to 'Edit', edit_contact_path(@contact), class:"btn btn-success" %> 
<%= link_to 'Back', contacts_path, class:"btn btn-danger" %>
