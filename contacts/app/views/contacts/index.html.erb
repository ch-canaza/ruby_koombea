<p id="notice"><%= notice %></p>

<h1>Contacts</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Avatar<th>
      <th>First name</th>
      <th>Last name</th>
      <th>Media</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contacts.each do |contact| %>
      <tr>
         <% if contact.image.attached? %>
          <td><%= image_tag contact.image, style: "width: 100px; display: block" %></td>
        <% end %>
        <td><%= contact.first_name %></td>
        <td><%= contact.last_name %></td>
        
        <td><%= link_to 'Show', contact %></td>
        <td><%= link_to 'Edit', edit_contact_path(contact) %></td>
        <!--td><%= link_to 'link list', edit_contact_path(contact) %></td-->
        <td><%= link_to 'Destroy', contact, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<br>

<%= link_to 'New Contact', new_contact_path, class:"btn btn-success" %>
