<h1 class="text-center mt-4"> Edit Password </h1>
<%= form_with model: current_user, url: edit_password_path do |form| %>

  <div class="field text-center mt-4">
    <%= form.label :password %>
    <%= form.password_field :password %>
  </div>
   <div class="field text-center mt-4">
    <%= form.label :confirm_password %>
    <%= form.password_field :password_confirmation %>
  </div>
  <div class="actions text-center mt-4">
    <%= form.submit "Update Password", class: "btn btn-success"%>
  </div>
<% end %>
