<p id="notice"><%= notice %></p>

<h1>Users</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Password</th>
      <th>Actions</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <div>
          <% if user.user_image.attached? %>
           <td><%= image_tag user.user_image, size: 30 %></td>
          <% else %>
            <td><%= gravatar_for user, size: 30 %></td>
          <% end %>
        </div>
       
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.password %></td>
        <td><%= link_to 'Show', user %></td>
        <% if logged_in? %>
          <% if user == current_user %>
            <td><%= link_to 'Edit', edit_user_path(user) %></td>
          <% end %>
          <% if current_user.admin? %>
            <td><%= link_to 'Destroy', user, method: :delete,
            data: { confirm: 'Are you sure you want to delete this user?' } %></td>
          <% end %>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
 <% if !logged_in? %>
  <%= link_to 'New User', new_user_path, class:"btn btn-success" %>
<% end %>